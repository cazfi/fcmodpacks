layer1_match_with = "forest_bg"
layer1_is_tall = TRUE
layer1_offset_y = 4
layer2_match_type = "forest"
layer2_match_with = "forest"
layer2_is_tall = TRUE
layer2_offset_y = 4

[tile_hills]
tag = "hills"
blend_layer = 0
num_layers = 2
layer0_match_type = "g"
layer0_match_with = "s", "p", "d", "t", "a"
layer0_sprite_type = "corner"
