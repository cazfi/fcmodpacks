layer1_match_with = "hill"

[tile_mountains]
tag = "mountains"
blend_layer = 0
num_layers = 3
layer0_match_type = "g"
layer0_match_with = "s", "p", "d", "t", "a"
layer0_sprite_type = "corner"
layer1_match_type = "mountain_bg"
layer1_match_with = "mountain_bg"
layer1_is_tall = TRUE
layer1_offset_y = 4
layer2_match_type = "mountain"
layer2_match_with = "mountain"
layer2_is_tall = TRUE
